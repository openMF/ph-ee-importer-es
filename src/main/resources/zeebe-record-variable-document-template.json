{
  "settings": {
    "index": {
      "number_of_shards": "5",
      "number_of_replicas": "1"
    }
  },
  "mappings": {
      "_doc": {
        "dynamic": true,
        "properties": {
          "intent": {
            "type": "keyword"
          },
          "key": {
            "type": "long"
          },
          "partitionId": {
            "type": "integer"
          },
          "position": {
            "type": "long"
          },
          "recordType": {
            "type": "keyword"
          },
          "rejectionReason": {
            "type": "text"
          },
          "rejectionType": {
            "type": "keyword"
          },
          "sourceRecordPosition": {
            "type": "long"
          },
          "timestamp": {
            "type": "date"
          },
          "value": {
            "properties": {
              "scopeKey": {
                "type": "long"
              },
              "updateSemantics": {
                "type": "keyword"
              },
              "variables": {
                "type": "object",
                "enabled": false
              }
            }
          },
          "valueType": {
            "type": "keyword"
          }
        }
      }
    }
}